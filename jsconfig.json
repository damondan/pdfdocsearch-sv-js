{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$db": ["./src/db"],
      "$db/*": ["./src/db/*"],
      "$app/*": ["./node_modules/@sveltejs/kit/src/runtime/app/*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.svelte",
    "tests/**/*.js",
    "vite.config.js"
  ],
  "exclude": [
    "node_modules/**",
    ".svelte-kit/**",
    "build/**",
    "dist/**"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": ["node", "@sveltejs/kit", "vite", "mongodb"]
  }
}
